@model TechSupport.Models.AddCustomersList
@{
    ViewBag.Title = "AddCustomers";
}
<link rel="stylesheet" href="~/Content/addressAPI/main.css" />
<script src="~/Content/main.js" defer></script>
<h2>Add | Edit Customers </h2>

@using (Html.BeginForm("AddCustomers", "Customers", FormMethod.Post, new { @class = "addCustomerForm" }))
{
    <div class="col-md-12">
        <fieldset class="addCustomers">
            <legend>Customer Details: </legend>
            <div class="fieldDetails">
                <div class="information1">
                    <h5>Name</h5>
                    @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control", @placeholder = "Name..."})
                </div>
                <div class="information2">
                    <h5>Address</h5>
                    @Html.TextBoxFor(c => c.Customer.Address, new { @class = "form-control", @placeholder = "Address..."})
                </div>
                <div class="information3">
                    <h5>City</h5>
                    @Html.TextBoxFor(c => c.Customer.City, new { @class = "form-control", @placeholder = "City..."})
                </div>
                <div class="information4">
                    <h5>State</h5>
                    @Html.DropDownListFor(c => c.Customer.State, new SelectList(Model.States, "StateCode", "StateName"), new { @class = "form-control", @placeholder = "State..."})
                </div>
                <div class="information5">
                    <h5>ZipCode</h5>
                    @Html.TextBoxFor(c => c.Customer.ZipCode, new { @class = "form-control", @placeholder = "ZipCode..."})
                </div>
                <div class="information6">
                    <h5>Phone</h5>
                    @Html.TextBoxFor(c => c.Customer.Phone, new { @class = "form-control", @placeholder = "Phone..."})
                </div>
                <div class="information7">
                    <h5>Email</h5>
                    @Html.TextBoxFor(c => c.Customer.Email, new { @class = "form-control", @placeholder = "Email..."})
                </div>
                @Html.HiddenFor(c => c.Customer.CustomerID)
                @Html.HiddenFor(c => c.Customer.State1)
                <input class="submit" type="submit" value="Submit" />
            </div>
        </fieldset>
    </div>
}
