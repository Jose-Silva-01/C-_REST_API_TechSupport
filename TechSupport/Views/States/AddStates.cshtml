@model TechSupport.Models.State
@{
    ViewBag.Title = "AddStates";
}
<script src="~/Content/main.js" defer></script>
<h2>Add | Edit States</h2>

@using (Html.BeginForm("AddStates", "States", FormMethod.Post, new { @class = "addStatesForm" }))
{
    <div class="col-md-12">
        <fieldset class="addStates">
            <legend>States Details: </legend>
            <div class="fieldDetails">
                <div class="information1">
                    <h5>Code</h5>
                    @Html.TextBoxFor(s => s.StateCode, new { @class = "form-control", @placeholder = "Code..." })
                </div>
                <div class="information2">
                    <h5>Name</h5>
                    @Html.TextBoxFor(s => s.StateName, new { @class = "form-control", @placeholder = "Name..." })
                </div>
                <div class="information3">
                    <h5>First ZipCode</h5>
                    @Html.TextBoxFor(s => s.FirstZipCode, new { @class = "form-control", type="number", @placeholder = "First ZipCode..." })
                </div>
                <div class="information4">
                    <h5>Last ZipCode</h5>
                    @Html.TextBoxFor(s => s.LastZipCode, new { @class = "form-control", type="number", @placeholder = "Email..." })
                </div>
                <input class="submit" type="submit" value="Submit" />
            </div>
        </fieldset>
    </div>
}